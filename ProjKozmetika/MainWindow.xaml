<Window x:Class="ProjKozmetika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Csillagvirág Szépségszalon" Height="600" Width="1200"
        Background="#94BFA7" WindowStartupLocation="CenterScreen">
    <!-- Stílus a gombokhoz lekerekítéssel -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="30" 
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <!-- Stílus a textboxokhoz lekerekítéssel -->
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="30" 
                                Padding="10">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#628170"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Resources>

    <Grid Width="1200">
        <!-- Cím -->
        <TextBlock Text="Csillagvirág szépségszalon" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Foreground="#FFFFDFD3" FontFamily="Blackadder ITC"/>

        <!-- Fő elrendezés (3 oszlop) -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,80,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Bal oldali StackPanel (gombok) -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" Height="400">
                <Grid Height="400">
                    <Grid.RowDefinitions>
                        <!-- 3 egyenlő sor a gomboknak -->
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Button Padding="50" Content="Szolgáltatás kiválasztása" Background="#628170" Grid.Row="0" Margin="10,30,10,30"/>
                    <Button Content="Dolgozó kiválasztása" Background="#628170" Grid.Row="1" Margin="10,30,10,30"/>
                    <Button Content="Időpont kiválasztása" Background="#628170" Grid.Row="2" Margin="10,30,10,30"/>
                </Grid>
            </StackPanel>

            <!-- Középső StackPanel (textboxok) -->
            <StackPanel Grid.Column="1"  VerticalAlignment="Center" Width="300" Height="400">
                <Grid Height="400">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Text="Vezetéknév" TextAlignment="Center"/>
                    <TextBox Grid.Row="1" Text="Keresztnév" TextAlignment="Center"/>
                    <TextBox Grid.Row="2" Text="Email cím" TextAlignment="Center"/>
                    <TextBox Grid.Row="3" Text="Telefonszám" TextAlignment="Center"/>
                </Grid>
            </StackPanel>

            <!-- Jobb oldali oszlop (kép és gomb) -->
            <StackPanel Grid.Column="2" Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="pack://siteoforigin:,,,/rendesterv.png" Width="300" Height="200" Stretch="Fill" Margin="0,0,0,20"/>
                <Button Content="Jelentkezés elküldése" Background="#628170" Padding="20" Margin="10" FontSize="18"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
