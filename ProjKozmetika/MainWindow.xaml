<Window x:Class="ProjKozmetika.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Csillagvirág Szépségszalon" Height="600" Width="1100"
        Background="#94BFA7" WindowStartupLocation="CenterScreen">
    <!-- Stílus a ComboBoxhoz és gombokhoz lekerekítéssel -->
    <Window.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        CornerRadius="30" 
                        Padding="10">
                            <Grid>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <Popup Name="PART_Popup" IsOpen="{TemplateBinding IsDropDownOpen}" Placement="Bottom" 
                               AllowsTransparency="True" Focusable="False">
                                    <Border Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    CornerRadius="10">
                                        <ScrollViewer>
                                            <ItemsPresenter />
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <!-- Stílus a gombokhoz -->
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="30" 
                                Padding="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>

        <!-- Stílus a textboxokhoz lekerekítéssel -->
        <Style TargetType="TextBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="30" 
                                Padding="0">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#628170"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="FontSize" Value="18"/>
        </Style>
    </Window.Resources>

    <Grid Width="1200" HorizontalAlignment="Center">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFADF1A2"/>
                <GradientStop Color="#FF55B346" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!-- Cím -->
        <TextBlock Text="Csillagvirág szépségszalon" FontSize="48" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Foreground="#FFFFDFD3" FontFamily="Blackadder ITC"/>

        <!-- Fő elrendezés (3 oszlop) -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,80,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>

            <!-- Bal oldali StackPanel (ComboBoxok és DatePicker) -->
            <StackPanel Grid.Column="0" VerticalAlignment="Center" Height="400">
                <Grid Height="400">
                    <Grid.RowDefinitions>
                        <!-- 3 egyenlő sor -->
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Szolgáltatás kiválasztása ComboBox -->
                    <ComboBox Grid.Row="0" Background="#628170" Margin="10,30,10,30">
                        <ComboBoxItem Content="Szolgáltatás kiválasztása"/>
                    </ComboBox>

                    <!-- Dolgozó kiválasztása ComboBox -->
                    <ComboBox Grid.Row="1" Background="#628170" Margin="10,30,10,30">
                        <ComboBoxItem Content="Dolgozó kiválasztása"/>
                    </ComboBox>

                    <!-- Időpont kiválasztása DatePicker -->
                    <DatePicker Background="#628170" Grid.Row="2" Margin="10,30,10,30"/>
                </Grid>
            </StackPanel>

            <!-- Középső StackPanel (textboxok) -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Width="300" Height="350">
                <Grid Height="350">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Text="Vezetéknév" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Text="Keresztnév" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Text="Email cím" TextAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Text="Telefonszám" TextAlignment="Center" VerticalAlignment="Center"/>
                </Grid>
            </StackPanel>

            <!-- Jobb oldali oszlop (kép és gomb) -->
            <StackPanel Grid.Column="2" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="Images/nagykepKozmetika.jpg" Width="400" Height="250" Stretch="Fill" Margin="0,0,0,20"/>
                <Button Content="Jelentkezés elküldése" Background="#FF458145" Padding="20" Margin="10" FontSize="18"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
